        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}DOCTOPET{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <header>
        {{ include('_navbar.html.twig') }}
    </header>
    <body>
        <div class="body-container">
            {% block body %}{% endblock %}
