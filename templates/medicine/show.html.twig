{% extends 'base.html.twig' %}

{% block title %}Medicine{% endblock %}

{% block body %}
    <h1>Medicine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medicine.name }}</td>
            </tr>
            <tr>
                <th>Morning</th>
                <td>{{ medicine.morning ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Noon</th>
                <td>{{ medicine.noon ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Evening</th>
                <td>{{ medicine.evening ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('medicine_index') }}">back to list</a>

    <a href="{{ path('medicine_edit', {'id': medicine.id}) }}">edit</a>

    {{ include('medicine/_delete_form.html.twig') }}
{% endblock %}
